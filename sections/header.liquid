<style>
  header-drawer {
    justify-self: end;
  }
  
  .section-header {
    margin-top: -1px
  }

  .template-collection .section-header {
    position: sticky;
    top: 0;
  }

  .template-collection .section-header,
  .template-search .section-header {
    border-bottom: 1px solid var(--black)
  }

  @media screen and (min-width: 1008px) {
    .template-product .section-header {
      border-bottom: 1px solid var(--black)
    }
  }

  .header__heading-logo {
    max-width: {{ section.settings.logo_width }}px;
  }

  .header__logo{
    width: {{ section.settings.logo_width }}px;
  }

  .section-header:not(.shopify-section-header-sticky) .header-transparent:not(:hover) {
    background: linear-gradient( rgba(0,0,0, var(--header-opacity, 0)), 60%, rgba(0,0,0, 0) );
  }
  .header-transparent {
    margin-bottom: calc(-1 * var(--header-height, 68px));
  }
  body:not(.overflow-hidden-tablet) .section-header:not(.shopify-section-header-sticky) .header-transparent--inverted:not(:hover) .header__icon--menu .icon,
  body:not(.overflow-hidden-tablet) .section-header:not(.shopify-section-header-sticky) .header-transparent--inverted:not(:hover) .header__icon .Icon {
    filter: brightness(0) invert(1);
    -webkit-filter: brightness(0) invert(1); /* Safari and older versions of Chrome and Opera */
    -moz-filter: brightness(0) invert(1); /* Older versions of Firefox */
    -o-filter: brightness(0) invert(1); /* Older versions of Opera */
    -ms-filter: brightness(0) invert(1); /* Older versions of Microsoft Edge */
  }

  .section-header:not(.shopify-section-header-sticky) .header-transparent--inverted:not(:hover) .Icon--logo path {
    fill: #fff
  }
  

  .section-header:not(.shopify-section-header-sticky) .header-transparent--inverted:not(:hover) .header__inline-menu a.list-menu__item,
  .section-header:not(.shopify-section-header-sticky) .header-transparent--inverted:not(:hover) .header__icons .icon-title,
  .section-header:not(.shopify-section-header-sticky) .header-transparent--inverted:not(:hover) .header__icons .header__icon--wishlist {
    color: #fff;
  }

  .header__icon--wishlist {
    line-height: normal;
  }
  .header__mobile--pts{
    display: flex !important;
    gap: 4px;
  }
  .header__mobile--pts span{
    display: inline-block !important; 
    height: auto; 
    text-decoration: unset !important;
  }

  @media screen and (min-width: 1185px) {
    header-drawer {
      display: none;
    }

    .header__menu-item a.list-menu__item::before {
      content: "";
      position: absolute;
      top: 40%;
      transform: translate(0, -50%);
      height: 440%;
      width: 100%;
    }

    .header__menu-item a.list-menu__item {
      position: relative;
      text-decoration: none !important; 
    }

    .header__menu-item a.list-menu__item:hover::after {
      transform: scale(1);
    }
  }

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
  }

  summary.list-menu__item,
  .header__menu-item { 
    padding-right: 3.4rem;
  }

  @media screen and (max-width: 1230px) {
    summary.list-menu__item,
    .header__menu-item { 
      padding-right: 1.7rem;
    }
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
    text-decoration: none;
  }

  .header__inline-menu .list-menu__item span, 
  .header__inline-menu .list-menu__item {
    font-family: var(--body-font);
    font-size: 1.2rem;
    font-weight: 500;
    letter-spacing: normal;
  }

  .list-menu__item--link {
    text-decoration: none;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  .js .mega-menu__content {
    opacity: 0;
    transform: translateY(-1.5rem);
    visibility: hidden;
    transition: opacity 0.3s ease-in-out;
    display: flex;
    justify-content: flex-start;
    gap: 8rem;
  }

  .mega-menu__content {
    position: absolute;
    height: 0;
    width: 0;
    padding: 0;
  }

  .mega-menu__content.global-settings-popup { 
    border-top: 1px solid var(--black);
  }

  .header__icons .Icon {
    width: 21px;
    height: 21px;
  }
  .header__icon .icon-title, 
  .header__icon.h-wishlist-icon {
    line-height: normal;
    font-family: var(--body-font);
    font-weight: 400;
    text-transform: uppercase;
    color: rgba(var(--color-foreground), 1)
  }

  body:not([data-auth]) .header__icon--wishlist {display: none}
  
  .header__icon .icon-title:hover,
  .header__icon--wishlist:hover {
    text-decoration: none;
    color: var(--dark-silver);
  }
  .header__icon .icon-title:active,
  .header__icon--wishlist:active {
    color: var(--dark-silver)
  }

  .hidden-tablet-and-up .Icon {
    width: 18px;
    height: 17px;
  }
  .hidden-tablet-and-up .Icon--cart {
    width: 17px;
    height: 16px;
    color: #000;
    stroke: #000;
    stroke-width: 0.6;
  }  

  @media screen and (min-width: 1185px) {
    .header__icons .Icon, .hidden-phone {
      display: none!important;
    }
    .Header__CartDot {
      display: none!important;
    }
  }

  @media screen and (max-width: 1185px) {

    .header--middle-left {
      grid-template-columns: 1fr auto auto;
    }

    .header__icon--wishlist, 
    .icon-title, 
    .header__icon--account,
    .ge-flag-show.header__icon {
      display: none!important;
    }
    .header__icons {
      gap: 2rem;
    }
  }

  @media screen and (max-width: 1140px) {
    .header--middle-left {
      grid-template-columns: 1fr auto auto
    }
  }

  @media screen and (max-width: 640px) {
    .hidden-phone {
      display: none!important;
    }
    .header__icons {
      gap: 1rem;
    }
  }

  @media screen and (min-width: 641px) {
    .hidden-tablet-and-up {
      display: none!important;
    }
  }

  .Icon--search-desktop {
    position: relative;
    top: 1px;
  }

  .Header__CartDot {
    width: 3px;
    height: 3px!important;
    position: absolute;
    top: 16px;
    right: -3px;
    border-radius: 100%;
    background-color: #fff;
    box-shadow: 0 0 0 2px #fff;
    transform: scale(0);
    transition: all .3s ease-in-out;
  }

  .Header__CartDot.is-visible {
    transform: scale(1)
  }

  .Icon--logo {
    max-width: 178px;
    min-width: 120px;
    height: 24px;
  }
  
  @media screen and (max-width: 768px) {
    .logo-wrapper {
      max-width: 180px!important;
    }
    .Icon--logo{
      max-width: 150px;
    }
  }

  .logo-wrapper {
    max-width: 200px;
  }

  .Icon--cart-desktop {
    color: #000;
    stroke: #000;
    stroke-width: 1.3;
    width: 21px!important;
    height: 23px!important;
  }
</style> 

{%- style -%}
  .header {
    align-items: start;
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  .header__inline-menu {
    align-self: center;
    position: static!important;
  }

  .section-header {
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

