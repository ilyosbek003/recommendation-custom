      padding-right: var(--padding-desktop, 4rem); 
    }
  }
{%- endstyle -%}

{% assign shadow_class = "" %}
{%- if section.settings.mega_menu_shadow -%} 
  {% assign shadow_class = "mega-menu_shadow" %}
{%- endif -%}

<svg xmlns="http://www.w3.org/2000/svg" class="hidden">
  <symbol id="icon-search" viewbox="0 0 18 19" fill="none">
    <path fill-rule="evenodd" clip-rule="evenodd" d="M11.03 11.68A5.784 5.784 0 112.85 3.5a5.784 5.784 0 018.18 8.18zm.26 1.12a6.78 6.78 0 11.72-.7l5.4 5.4a.5.5 0 11-.71.7l-5.41-5.4z" fill="currentColor"/>
  </symbol>

  <symbol id="icon-close" class="icon icon-close" fill="none" viewBox="0 0 18 17">
    <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" fill="currentColor">
  </symbol>
</svg>

{% assign isTransparentHeader = false %}
{% if section.settings.enable_transparent_header == true %}
  {% if template.name == "index" or page.metafields.page.transparent_header %}
    {% assign isTransparentHeader = true %}
  {% endif %}
{% endif %}

<{% if section.settings.enable_sticky_header %}sticky-header{% else %}div{% endif %} class="header-wrapper color-background-2 {% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %} {%- if template.name == 'product' -%} color-transparent {%- endif -%} {% if isTransparentHeader %}header-transparent header-transparent--{{ section.settings.transparent_header_style }}{% endif %}" id="section-wrapper-{{ section.id }}" data-product-card-layout="{{ section.settings.product_card_layout }}" style="--card-background: {{ section.settings.product_card_background }}; --header-opacity: {{ section.settings.transparent_header_opacity | divided_by: 100.0 }}; --page-width:{{ section.settings.container_width | divided_by: 10 }}rem ">

  {% render 'search-bar' | settings: section.settings %}

  <header class="header header--{{ section.settings.logo_position }} {% if section.settings.container_layout == "contained" %}page-width{% endif %} {% if settings.pointer_menu_desktop != blank %} header--has-menu{% endif %}" style="--padding-desktop: {{ section.settings.padding_inline_desktop | divided_by: 10 }}rem; --padding-mobile:{{ section.settings.padding_inline_mobile | divided_by: 10 }}rem;">
    {%- if settings.pointer_menu_desktop != blank -%}
      <header-drawer data-breakpoint="tablet">
        <details id="Details-menu-drawer-container" class="menu-drawer-container">
          <summary class="header__icon header__icon--menu header__icon--summary link focus-inset" aria-label="{{ 'sections.header.menu' | t }}">
            <span>
              {% render 'icon-hamburger' %}
              {% render 'icon-close' %}
            </span>
          </summary>
          <div id="menu-drawer" class="gradient menu-drawer motion-reduce" tabindex="-1">
            <div class="menu-drawer__inner-container">
              <div class="menu-drawer__navigation-container">
                <span class="header__icon header__icon--close header__icon--menu link focus-inset">
                  {% render 'icon-close' %}
                </span>
                <nav class="menu-drawer__navigation">
                  <ul class="menu-drawer__menu has-submenu list-menu" role="list">
                    {%- for item in settings.pointer_menu_mobile.links -%}

                      {% assign title = item.title | escape_once %}
                      {% assign pointed_list = linklists[title] %}
                      {% if pointed_list != blank %}
                        {% assign title = pointed_list.title %}
                      {% endif %}
                      {%- capture main_url -%}
                        {{ item.url }}{%- if item.type == "collection_link" -%}?nav.p1={{ item.handle }}.e1&filter.v.availability=1{%- endif -%}
                      {%- endcapture -%}
                      {% capture aria_current %}
                        {% if item.current %}aria-current="page"{% endif %}
                      {% endcapture %}

                      <li>
                        {%- if pointed_list.links != blank -%}
                          <div id="Details-menu-drawer-menu-item-{{ forloop.index }}" class="menu-drawer__menu--item-collapsable">

                            <div 
                              class="menu-drawer__menu-item list-menu__item link link--text focus-inset text-large upper-case menu-drawer__menu-collapsable-wrapper font-semibold"
                              data-behaviour="{{ section.settings.parent_behaviour }}"
                            >
                              {%- if section.settings.parent_behaviour == 'link' -%}
                                <a 
                                  href="{{ main_url }}" 
                                  title="{{ title }}"
                                >
                                  {{ title }}
                                </a>

                              {% else %}
                                {{ title }}
                              {%- endif -%}
                              
                              <div class="menu-drawer__menu-collapsable-icons menu-drawer__icons-1">
                                {% render 'icon' with 'plus' %}
                                {% render 'icon' with 'minus' %}
                              </div>
                            </div>

                            <div 
                              id="link-{{ title }}" 
                              class="has-submenu gradient motion-reduce menu-drawer__menu--item-content  animation-container{% if section.settings.parent_indentation == 'indented' %} child-list-indent{% endif %}" 
                              tabindex="-1"
                            >
                              <div class="menu-drawer__inner-submenu">
                                {% assign itemTitle = title | downcase %}
                                {% if itemTitle contains 'ready-to-wear' %}
                                  {% render 'link-block-drawer', pointedList: linklists['additional-menu'].links, itemHandle: item.handle, behaviour: section.settings.parent_behaviour %}
                                {% endif %}
                                
                                {% render 'link-block-drawer', pointedList: pointed_list.links, itemHandle: item.handle, behaviour: section.settings.parent_behaviour, parent_title: title %}
                              </div>
                            </div>
                          </div>
                        {%- else -%}
                          <a href="{{ main_url }}" 
                            class="menu-drawer__menu-item list-menu__item link link--text focus-inset text-large upper-case font-semibold "
                            {{ aria_current }}
                          >
                            {{ title | escape }}
                          </a>
                        {%- endif -%}
                      </li>
                    {%- endfor -%}
                  </ul>
                </nav>
                
                <nav class="menu-drawer__navigation--secondary">
                  <ul class="menu-drawer__menu--secondary">
                    {%- for link in secondary_menu.links -%}
                      <li class="menu-drawer__menu-item--secondary">
                        <a href="{{ link.url }}{%- if link.type == "collection_link" -%}?filter.v.availability=1{%- endif -%}" title="{{ link.title | escape }}" class="menu-drawer__menu-item_link--secondary">
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}

                    {%- if shop.customer_accounts_enabled -%}
                      <li class="menu-drawer__menu-item--secondary">
                        <a href="{{ routes.account_url }}" title="Account" class="menu-drawer__menu-item_link--secondary">
                          Account
                        </a>
                      </li>
                    {%- endif -%}
                      <li class="menu-drawer__menu-item--secondary">
                        <a href="{{ routes.cart_url }}" title="Bag" class="menu-drawer__menu-item_link--secondary">
                          Bag
                        </a>
                      </li>
                      <li class="menu-drawer__menu-item--secondary menu-item--wishlist">
                        <a href="/apps/wishlist" title="wishlist" class="menu-drawer__menu-item_link--secondary">
                          Wishlist
                        </a>
                      </li>
                      {% if customer %}
                      {% endif %}
                      <li class="menu-drawer__menu-item--secondary">
                        <div class="menu-drawer__menu-item--secondary geSwitcher geSwitcher--mobile">{% render 'country-switcher' %}</div>
                      </li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </details>
      </header-drawer>
    {%- endif -%}

    {%- if section.settings.logo_position == 'top-center' or settings.pointer_menu_desktop == blank -%}
      <details-modal class="header__search">
        <details>
          <summary class="header__icon header__icon--search link" aria-label="{{ 'general.search.search' | t }}">
            <svg class="modal__toggle-open icon icon-search" aria-hidden="true" focusable="false" role="presentation">
              <use href="#icon-search">
            </svg>
          </summary>
        </details>
      </details-modal>
    {%- endif -%}
    {% assign logoClass = '' %}
    {%- if section.settings.logo != blank -%}
    {% assign logoClass = 'header-logo' %}
    {%- endif -%}

    {%- if request.page_type == 'index' -%}
      <h1 class="header__heading hidden">Bugatchi</h1>
    {%- endif -%}
    <a href="{{ routes.root_url }}" title="Bugatchi" class="logo-wrapper header__heading-link link link--text focus-inset {{ logoClass }}">
          {%- if section.settings.logo != blank -%}
            {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
            {%- assign logo_height = section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
            {{ section.settings.logo | image_url: width: section.settings.width | image_tag:
              class: 'header__heading-logo',
              widths: '50, 100, 150, 200, 250, 300, 400, 500',
              height: logo_height,
              width: section.settings.logo_width,
              alt: logo_alt
            }}
          {%- else -%}
            {% render 'icon' with 'logo' %}
          {%- endif -%}
    </a>

    {%- if settings.pointer_menu_desktop != blank -%}
      {%- if section.settings.menu_type_desktop == 'dropdown' -%}
        <nav class="header__inline-menu">
          <ul class="list-menu list-menu--inline" role="list">
            {%- for link in section.settings.menu.links -%}
              <li>
                {%- if link.links != blank -%}
                  <header-menu>
                    <details id="Details-HeaderMenu-{{ forloop.index }}">
                      <summary class="header__menu-item list-menu__item link focus-inset">
                        <span>{{ link.title | escape }}</span>
                        {% render 'icon-caret' %}
                      </summary>
                      <ul id="HeaderMenu-MenuList-{{ forloop.index }}" class="header__submenu list-menu list-menu--disclosure gradient caption-large motion-reduce global-settings-popup" role="list" tabindex="-1">
                        {%- for childlink in link.links -%}
                          <li>
                            {%- if childlink.links == blank -%}
                              <a href="{{ childlink.url }}{%- if childlink.type == "collection_link" -%}?filter.v.availability=1{%- endif -%}" class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                {{ childlink.title | escape }}
                              </a>
                            {%- else -%}
                              <details id="Details-HeaderSubMenu-{{ forloop.index }}">
                                <summary class="header__menu-item link link--text list-menu__item focus-inset caption-large">
                                  <span>{{ childlink.title | escape }}</span>
                                  {% render 'icon-caret' %}
                                </summary>
                                <ul id="HeaderMenu-SubMenuList-{{ forloop.index }}" class="header__submenu list-menu motion-reduce">
                                  {%- for grandchildlink in childlink.links -%}
                                    <li>
                                      <a href="{{ grandchildlink.url }}{%- if grandchildlink.type == "collection_link" -%}?filter.v.availability=1{%- endif -%}" class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                        {{ grandchildlink.title | escape }}
                                      </a>
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              </details>
                            {%- endif -%}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </details>
                  </header-menu>
                {%- else -%}
                  <a href="{{ link.url }}{%- if link.type == "collection_link" -%}?filter.v.availability=1{%- endif -%}" class="header__menu-item header__menu-item list-menu__item link link--text focus-inset"{% if link.current %} aria-current="page"{% endif %}>
                    <span>{{ link.title | escape }}</span>
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      {%- else -%}
        
      {%- assign mega_menu_names = '' -%}
      {%- for block in section.blocks -%}
        {%- if block.type == 'mega_menu' -%}
          {%- assign trim_mega_menu_name = block.settings.navigation_mega_menu | strip | downcase -%}
          {%- assign mega_menu_names = mega_menu_names | append: trim_mega_menu_name | append: ',' -%}
        {%- endif -%}
      {%- endfor -%}

        <nav class="header__inline-menu">
          <ul class="list-menu list-menu--inline" role="list">
            {%- for item in settings.pointer_menu_desktop.links -%}

              {% assign title = item.title | escape_once %}
              {% assign pointed_list = linklists[title] %}
              {% if pointed_list != blank %}
                {% assign title = pointed_list.title | escape_once %}
              {% endif %}
              {%- assign downcased_link_title = title | downcase | strip -%}
              {%- capture main_url -%}
                {{ item.url }}{%- if item.type == "collection_link" -%}?nav.p1={{ item.handle }}.e1&filter.v.availability=1{%- endif -%}
              {%- endcapture -%}
              {% capture aria_current %}
                {% if item.current %}aria-current="page"{% endif %}
              {% endcapture %}

              <li>
                {%- if pointed_list.links != blank -%}
                  <header-menu>
                    <div id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu" url={{ item.url }} data-layout="{{ forloop.index }}" data-handle="{{ item.handle }}"">

                      <summary class="header__menu-item list-menu__item link focus-inset">
                        <a href="{{ main_url }}" class="list-menu__item">
                          <span>{{ title }}</span>
