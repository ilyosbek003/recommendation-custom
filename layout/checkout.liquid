  <script>
    function checkProperties() {
      var propertyVal = '';
      // Handle properties from cart items
      document.querySelectorAll('.product__description__property').forEach(function(elem, i){
        propertyVal = elem.innerHTML.trim();
        if(propertyVal.startsWith('finalSale:')){
          elem.innerHTML = propertyVal.split(': ')[1];
          elem.classList.add('final-sale');
        }
      });
    }
    function updateProductNames() {
      const productNamesEls = Array.from(document.querySelectorAll('.product__description__name'));
      productNamesEls.forEach(el => {
        const name = el.textContent;
        el.textContent = name.replaceAll('EcoVero', "EcoVero™").replaceAll('Eco Vero', "EcoVero™")
      })
    }
    let mutationHappened = false;
    let observer = new MutationObserver(function(mutations) {
      mutations.forEach(async function(changes) {
        if (target.classList.contains('order-summary__sections')) {
          if (!mutationHappened) {
            mutationHappened = true;
            updateProductNames();
            checkProperties();
          } else {
            mutationHappened = false;
          } 
        }
      });
    });
    const tagsContainerEl = document.querySelector('body');
    observer.observe(tagsContainerEl, { childList: true, subtree: true });
    updateProductNames();
    checkProperties();
  </script>

  <style>
